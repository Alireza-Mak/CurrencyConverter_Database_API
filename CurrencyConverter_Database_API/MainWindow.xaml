<Window x:Class="CurrencyConverter_Database_API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyConverter_Database_API"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Currency Converter" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" Icon="Images/money.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <TabControl Name="tbMain" TabStripPlacement="Top" Grid.Row="0" BorderThickness="0">
            
            <!-- Currency Converter Tab -->
            <TabItem Name="tbConverter" Header="Currency Converter">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="130"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="2" Width="800" CornerRadius="10" BorderThickness="5">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#ec2075" Offset="0.0" />
                                <GradientStop Color="#f33944" Offset="0.50" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Rectangle Grid.Row="2">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#ec2075" Offset="0.0" />
                                    <GradientStop Color="#f33944" Offset="0.50" />
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Border>

                    <!-- Titles Section-->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Height="50" Width="1000" VerticalAlignment="Center">
                        <Label Height="50" Width="1000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Currency Converter" FontSize="25" Foreground="#ec2075" FontWeight="Bold"></Label>
                    </StackPanel>

                    <!-- Result Section-->
                    <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Height="80" Width="1000">
                        <Label Height="40" Width="1000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Converted Currency" FontSize="20"></Label>
                        <Label Name="lblCurrency" Height="40" Width="1000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"></Label>
                    </StackPanel>

                    <!-- labels Section-->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="60" Width="800">
                        <Label Height="40" Width="150" Content="Enter Amount : " Margin="35 0 0 0" VerticalAlignment="Bottom" Foreground="White" FontSize="20"></Label>
                        <Label Height="40" Width="150" Content="From : " Margin="110 0 0 0" VerticalAlignment="Bottom" Foreground="White" FontSize="20"></Label>
                        <Label Height="40" Width="150" Content="To : " Margin="135,0,0,0" VerticalAlignment="Bottom" Foreground="White" FontSize="20"></Label>
                    </StackPanel>

                    <!-- Inputs Section-->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Height="90" Width="800" VerticalAlignment="Bottom">
                        <TextBox Name="txtCurrency" Width="200" Height="30" Margin="40 0 0 0" PreviewTextInput="NumberValidationTextBox" TextChanged="OnInputTextChanged" FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Top"></TextBox>
                        <ComboBox Name="cmbFromCurrency" Width="170" Height="30" Margin="60 0 40 0" FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Top" MaxDropDownHeight="150" SelectionChanged="CmbFromCurrency_SelectionChanged"></ComboBox>
                        <Button VerticalAlignment="Top" Height="30" Width="34" HorizontalAlignment="Center" Background="#ec2075" Style="{StaticResource ButtonRound}" Cursor="Hand" Click="Swap_Click">
                            <fa:ImageAwesome Icon="Exchange" Height="24" Width="30" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"></fa:ImageAwesome>
                        </Button>
                        <ComboBox Name="cmbToCurrency" Width="170" Height="30" Margin="40 0 0 0" FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Top" MaxDropDownHeight="150" SelectionChanged="CmbToCurrency_SelectionChanged"></ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Height="100" Width="1000" Orientation="Horizontal">
                        <!-- Convert Button -->
                        <Button Name="Convert" Height="40" Width="150" Content="Convert" Click="Convert_Click" Margin="350 0 20 0" Foreground="White" FontSize="20" Style="{StaticResource ButtonRound}">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#ec2075" Offset="0.0"/>
                                    <GradientStop Color="#f33944" Offset="0.5"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                        <!-- Clear Button -->
                        <Button Name="Clear" Height="40" Width="150" Content="Clear" Click="Clear_Click" Foreground="White" FontSize="20" Style="{StaticResource ButtonRound}">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#ec2075" Offset="0.0"/>
                                    <GradientStop Color="#f33944" Offset="0.5"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Currency Master Tab -->
            <TabItem Name="tbMaster" Header="Currency Master">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                        <RowDefinition Height="200"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!-- Set background -->
                    <Border Grid.Row="1" Width="800" CornerRadius="10" BorderThickness="5" Margin="100,0">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#ec2075" Offset="0.0" />
                                <GradientStop Color="#f33944" Offset="0.50" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Rectangle Grid.Row="2">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#ec2075" Offset="0.0" />
                                    <GradientStop Color="#f33944" Offset="0.50" />
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Border>

                    <!-- Titles Section-->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Height="50" Width="1000" VerticalAlignment="Center" Margin="0,5">
                        <Label Height="50" Width="1000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Currency Converter" FontSize="25" Foreground="#ec2075" FontWeight="Bold"></Label>
                    </StackPanel>

                    <!-- Label Section-->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="800" Margin="100,0">
                        <Label Height="40" Width="180" Content="Currency Name : " Margin="150 0 0 0" VerticalAlignment="Bottom" Foreground="White" FontSize="20"></Label>
                        <Label Height="40" Width="180" Content="Rate : " Margin="100 0 0 0" VerticalAlignment="Bottom" Foreground="White" FontSize="20"></Label>
                    </StackPanel>

                    <!-- Inputs Section-->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Height="60" Width="800" VerticalAlignment="Bottom" Margin="100,0">
                        <TextBox Name="txtCurrencyName" Width="200" Height="30" Margin="150 0 0 0" FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Top" MaxLength="50" CharacterCasing="Upper"></TextBox>
                        <TextBox Name="txtRate" Width="200" Height="30" Margin="80 0 0 0" PreviewTextInput="NumberValidationTextBox" FontSize="18" VerticalContentAlignment="Center" VerticalAlignment="Top"></TextBox>
                    </StackPanel>

                    <!-- Buttons Section-->
                    <StackPanel Grid.Row="2" Height="60" Width="1000" Orientation="Horizontal">
                        <Button Name="btnSave" Height="40" Width="150" Content="Save" Click="Save_Click" Margin="350 0 20 0" Foreground="White" FontSize="20" Style="{StaticResource ButtonRound}">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#ec2075" Offset="0.0"/>
                                    <GradientStop Color="#f33944" Offset="0.5"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                        <Button Name="btnCancel" Height="40" Width="150" Content="Cancel" Click="Cancel_Click" Foreground="White" FontSize="20" Style="{StaticResource ButtonRound}">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#ec2075" Offset="0.0"/>
                                    <GradientStop Color="#f33944" Offset="0.5"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </StackPanel>

                    <!-- DataGrid Section-->
                    <StackPanel Height="200" Width="800" Grid.Row="3" Margin="100,0" VerticalAlignment="Top">
                        <DataGrid Name="dgvCurrency" AutoGenerateColumns="False" Height="180" Margin="10" Width="480" Background="Transparent" CanUserAddRows="False" 
                                  SelectedCellsChanged="DgvCurrency_SelectedCellsChanged" SelectionUnit="Cell" VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="Id" Header="Id" Width="100" CanUserResize="False" Visibility="Hidden" Binding="{Binding Path=Id}"/>
                                <DataGridTemplateColumn Header="Edit" Width="70" IsReadOnly="True" DisplayIndex="0">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="Images\edit-button.png" ToolTip="Edit" Width="15" Height="15"  x:Name="Revise"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Delete" Width="70" IsReadOnly="True" DisplayIndex="1">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="Images\delete-button.png" ToolTip="Delete" Width="15" Height="15"  x:Name="Delete"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn x:Name="Rate" Header="Rate" Width="100" CanUserResize="False" CanUserReorder="False"
                                                    Binding="{Binding Path=Rate}" IsReadOnly="True"/>
                                <DataGridTextColumn x:Name="CurrencyName" Header="Currency Name" Width="*" MinWidth="20" 
                                                    CanUserResize="False" CanUserReorder="False" Binding="{Binding Path=CurrencyName}" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <!-- Footer Section-->
        <StackPanel Grid.Row="1" Height="70" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="© " FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Name="currentYear" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center">
<Hyperlink NavigateUri="https://alirezamak.com" RequestNavigate="Hyperlink_RequestNavigate" TextDecorations="None">
    <Hyperlink.Foreground>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#ec2075" Offset="0.0"/>
            <GradientStop Color="#f33944" Offset="0.5"/>
        </LinearGradientBrush>
    </Hyperlink.Foreground>
    Alireza Mak
</Hyperlink>
            </TextBlock>
            <TextBlock Text=" | Full Stack Developer. All rights reserved." FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
